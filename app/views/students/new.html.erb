<%= form_tag ({controller: "students", action: "create"}) do%>
  <%= label_tag(:name)%>
  <%= text_field_tag(:name)%><br>
   <%= label_tag(:dob)%>
   <%= date_field(:students,:dob) %><br>
    <%= label_tag(:email)%>
   <%= email_field(:students,:email) %><br>
   <%= label_tag(:phone)%>
   <%= telephone_field(:students, :phone) %><br>
   
<input id="age_child" name="gender" type="radio" value="child" />
