<label for="age_adult">I'm over 21</label>
<% depart_array = Department.all.map { |i| [i.department_name, i.id] } %>
<%= options_for_select(depart_array) %>

 <%= label_tag(:password)%>
<%= password_field_tag(:password) %><br>
