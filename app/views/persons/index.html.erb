<h1>Persons#index</h1>
<p>Find me in app/views/persons/index.html.erb</p>
<h1>Listing Articles</h1>
<%= link_to 'New person', new_person_path %>
<table>
  <tr>
    <th>name</th>
    <th>dob</th>
     <th>city</th>
     <th>role</th>

    <th colspan="3"></th>
  </tr>
 
  <% @people.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.dob %></td>
       <td><%= person.city %></td>
        <td><%= person.role %></td>
      <td><%= link_to 'Show',  person_path(person) %></td>
      <td><%= link_to 'Edit', edit_person_path(person) %></td>
      <td><%= link_to 'Destroy', person_path(person),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>